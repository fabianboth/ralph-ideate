{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "UTC",
  "schedule": [
    "before 9am on monday"
  ],
  "prConcurrentLimit": 10,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 9am on monday"
    ]
  },
  "ignoreDeps": [
    "python",
    "torch",
    "torchvision"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pep621"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "python minor/patch updates"
    },
    {
      "matchManagers": [
        "pep621"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": "python major updates"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github actions"
    }
  ]
}